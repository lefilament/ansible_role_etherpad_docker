version: "2.1"
services:
    backup_etherpad:
        build:
            context: .
            dockerfile: Dockerfile-postgres
        image: filament/duplicity:postgres
        hostname: backup-etherpad
        domainname: "{{ pad_url }}"
        environment:
            DST: "swift://etherpad_{{ inventory_hostname|lower }}"
            PGDATABASE: "{{ pad_db_name }}"
            PGPASSWORD: "{{ pad_db_pass }}"
            PGUSER: "{{ pad_db_user }}"
            PASSPHRASE: "{{ pad_db_pass }}"
            SWIFT_USERNAME: "{{ swift_username }}"
            SWIFT_PASSWORD: "{{ swift_password }}"
            SWIFT_AUTHURL: "{{ swift_authurl }}"
            SWIFT_AUTHVERSION: {{ swift_authversion }}
            SWIFT_TENANTNAME: "{{ swift_tenantname }}"
            SWIFT_TENANTID: "{{ swift_tenantid }}"
            SWIFT_REGIONNAME: "{{ swift_regionname }}"
            JOB_300_WHAT: "backup --full-if-older-than 6D"
            JOB_301_WHAT: "dup remove-all-inc-of-but-n-full 3 --force $$DST $$@"
            JOB_301_WHEN: "daily"
            JOB_302_WHAT: "dup remove-all-but-n-full 3 --force $$DST $$@"
            JOB_302_WHEN: "daily"
        networks:
            - etherpad_default
            - public
        command:
            - /etc/periodic/daily/jobrunner

networks:
    etherpad_default:
        driver_opts:
            encrypted: 1
        external: true
    public:
        driver_opts:
            encrypted: 1
